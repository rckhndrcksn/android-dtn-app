<resources>
    <style name="BottomSheetDialogButtons">
        <item name="android:layout_width">192dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="DTNApp.Button" parent="@android:style/Widget.Button.Small">
        <item name="android:layout_height">@dimen/button_default_height</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="DTNApp.Button.Form" parent="DTNApp.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_form_height</item>
        <item name="android:background">@drawable/bottom_bar_background</item>
        <item name="android:layout_gravity">center_horizontal|center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginCreateDialogAnimations">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="BaseCustomDialogFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorButtonNormal">?attr/colorAccent</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="colorAccent">#12e479</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="LoginCreateAccountDialogLayoutStyle">
        <item name="android:layout_height">@dimen/login_create_account_dialog_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/custom_dialog_top_padding</item>
        <item name="android:paddingBottom">@dimen/custom_dialog_bottom_padding</item>
        <item name="android:paddingStart">@dimen/custom_dialog_side_padding</item>
        <item name="android:paddingEnd">@dimen/custom_dialog_side_padding</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CreateAccountNextButton">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textColor">@color/next_button_text_color</item>
        <item name="android:text">@string/next_button</item>
        <item name="borderColor">@color/next_button_border_color</item>
        <item name="fillColor">@android:color/white</item>
        <item name="disabledBorderColor">@color/next_button_disabled_color</item>
        <item name="disabledFillColor">@android:color/white</item>
        <!--<item name="android:enabled">false</item>-->
    </style>

    <style name="CreateAccountNextButton.CreatePassword">
        <item name="android:layout_marginTop">26dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="CreateAccountNextButton.CreateComplete">
        <item name="android:layout_marginTop">34dp</item>
        <item name="android:text">@string/login_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fillColor">@color/next_button_border_color</item>
        <item name="android:enabled">true</item>
    </style>

    <style name="LoginErrorStyle" parent="BaseCustomDialogFragment">
        <item name="colorAccent">#ff9600</item>
    </style>

    <style name="PasswordRecoveryDialogStyle" parent="BaseCustomDialogFragment">
        <item name="colorAccent">#0f7cff</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/custom_dialog_title_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="DialogAccentStyle">
        <item name="android:layout_width">@dimen/custom_dialog_title_accent_width</item>
        <item name="android:layout_height">@dimen/custom_dialog_title_accent_height</item>
        <item name="android:layout_marginTop">@dimen/custom_dialog_title_accent_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/custom_dialog_title_accent_bottom_margin</item>
        <item name="android:background">?attr/colorControlActivated</item>
    </style>
</resources>
