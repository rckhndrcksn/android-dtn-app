<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LoginCreateAccountDialogLayoutStyle">

    <TextView
        android:id="@+id/title"
        android:text="@string/create_acct_title"
        style="@style/DialogTitleStyle"/>

    <View
        android:id="@+id/titleAccent"
        style="@style/DialogAccentStyle" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            style="@style/PasswordEditTextStyle"/>

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pw_requirements"
        android:textSize="@dimen/create_account_edit_text_size_small"
        android:textStyle="italic"
        android:textColor="#b3b3ba"/>

    <com.heb.dtn.widget.DTNRoundedButton
        android:id="@+id/next"
        style="@style/CreateAccountNextButton.CreatePassword" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/create_account_edit_text_size_small"
        android:text="@string/tpp_title"
        android:textColor="?android:attr/textColorPrimary"/>

</LinearLayout>