<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LoginCreateAccountDialogLayoutStyle">

    <TextView
        android:id="@+id/title"
        android:text="@string/create_acct_title"
        style="@style/DialogTitleStyle"/>

    <View
        android:id="@+id/titleAccent"
        style="@style/DialogAccentStyle" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/emailEditText"
            style="@style/EmailEditTextStyle"/>

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/promoOptIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/acct_promo_msg"
        android:checked="false"
        android:textSize="@dimen/create_account_edit_text_size_small"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="20dp"
        android:gravity="top"/>

    <com.heb.dtn.widget.DTNRoundedButton
        android:id="@+id/nextButton"
        style="@style/CreateAccountNextButton" />

</LinearLayout>
