<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="320dp"
    style="@style/LoginCreateAccountDialogLayoutStyle.Success">

    <TextView
        android:id="@+id/title"
        android:text="@string/pw_sent_title"
        style="@style/DialogTitleStyle" />

    <View
        android:id="@+id/titleAccent"
        style="@style/DialogAccentStyle"
        android:layout_marginBottom="31dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/forgot_password_text_size"
        android:text="@string/pw_sent_msg"
        style="@style/LoginCreateAccountTextView" />

    <TextView
        android:id="@+id/passwordResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        style="@style/EmailTextViewStyle" />
    
    <com.heb.dtn.widget.DTNRoundedButton
        android:id="@+id/ok"
        style="@style/OKButton.ResetPassword"/>
</LinearLayout>