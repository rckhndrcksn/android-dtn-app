<?xml version="1.0" encoding="utf-8"?>
<!--
   A common layout for fragment with a list view and two "RxApp.Button.Form" styled
   action buttons at bottom.
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.heb.dtn.foundation.widget.recyclerview.RecyclerListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/bottom_bar_background">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/negative_action_button"
            style="@style/RxApp.Button.Form"
            android:background="@android:color/transparent"
            android:textStyle="normal"
            android:text="@string/action_not_now"/>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/positive_action_button"
            style="@style/RxApp.Button.Form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="@string/action_yes"/>

    </LinearLayout>

</LinearLayout>
