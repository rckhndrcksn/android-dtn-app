<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LoginCreateAccountDialogLayoutStyle">

    <TextView
        android:id="@+id/title"
        android:text="@string/login_title"
        style="@style/DialogTitleStyle"/>

    <View
        android:id="@+id/titleAccent"
        style="@style/DialogAccentStyle" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/email"
            style="@style/EmailEditTextStyle"/>

    </android.support.design.widget.TextInputLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                style="@style/PasswordEditTextStyle"/>

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/forgot_password_text_size"
            android:textStyle="italic"
            android:textColor="@color/forgot_password_text_color"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="15dp"
            android:text="@string/forgot_pw"
            android:background="?attr/selectableItemBackground"
            android:filterTouchesWhenObscured="true"/>

    </FrameLayout>

    <com.heb.dtn.widget.DTNRoundedButton
        android:id="@+id/login"
        style="@style/LoginButtonStyle"/>

</LinearLayout>